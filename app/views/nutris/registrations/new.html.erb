<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "nutris/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, id:"email", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, id:"password", autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, id:"password_confirmation", autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :nome %><br />
    <%= f.text_field :nome, autofocus: true, id:"nome", autocomplete: "nome" %>
  </div>

  <div class="field">
    <%= f.label :crn %><br />
    <%= f.number_field :crn, autofocus: true, id:"crn", autocomplete: "crn" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", id:"submit" %>
  </div>
<% end %>

<%= render "nutris/shared/links" %>
